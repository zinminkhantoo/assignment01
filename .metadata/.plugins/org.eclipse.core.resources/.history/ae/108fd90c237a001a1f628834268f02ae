<?php
    class Access {
        public $fruit;
        private $color;
        protected $animals;
        
        function setFruit($name) {
            $this->fruit = $name;
        }
        private function setColor($name) {
            $this->color = $name;
        }
        protected function setAnimals($name) {
            $this->animals = $name;
        }
        
    }
    
    $obj = new Access();
    $obj->setFruit("Apple");
    echo $obj->fruit;
    
    $obj->setColor("Red");
    echo $obj->color;
    
    $obj->setAnimals("ant");
    echo $obj->animals;
    
    
?>