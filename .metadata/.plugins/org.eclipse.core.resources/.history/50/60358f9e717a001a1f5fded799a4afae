<?php
abstract class ParentClass{
    abstract protected function GetName($name);
}

class ChildClass extends ParentClass{
    public function GetName($name){
        if($name=="John")
            $temp =  "Mr";
        else if ($name = "Taylor") 
            $temp = "Mrs";
        else 
            $temp = "";
        return "{$temp} {$name}";       //return value passing arguments
    }
}

class ChildClass2 extends ParentClass{
    public function GetName($name,$dot = ".", $greet = "Hello, "){
        if($name=="John")
            $temp =  "Mr";
            else if ($name = "Taylor")
                $temp = "Mrs";
                else
                    $temp = "";
                    return "{$greet} {$temp} {$dot} {$name}";
    }
}

    $obj = new ChildClass();
    echo $obj->GetName("John")."</br>";
    echo $obj->GetName("Taylor");

    echo "</br></br>";
    
    $obj2 = new ChildClass2();    
    echo $obj2->GetName("John")."</br>";
    echo $obj2->GetName("Taylor");
    
    
?>