<?php
	class Fruit{
		private $name;
		function __construct($value)
		{
			$this->name = $value;
			echo "I am constructor</br></br>";
		}
		public function getName()
		{
			echo "Fruit name is ".$this->name."</br></br>";
		}

		function __destruct() {
		    echo "I am destructor</br></br>";
		}
	}

	$fruit = new Fruit("Apple");
	$fruit->getName();
?>