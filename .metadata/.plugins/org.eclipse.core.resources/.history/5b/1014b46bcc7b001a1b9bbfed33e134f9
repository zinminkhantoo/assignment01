<?php
session_start();
    class Cart {
        private $id;
        private $name;
        private $price;
        function __construct($id, $name, $price) {
            $this->id = $id;
            $this->name = $name;
            $this->price = $price;
        }
        function GetID() {
            return $this->id;
        }
        function GetName() {
            return $this->name;
        }
        function GetPrice() {
            return $this->price;
        }
    }
    $products = array(
        1 => new Cart(1, "SuperWidget", 19.99),
        2 => new Cart(2, "MegaWidget", 29.99),
        3 => new Cart(3 , "WonderWidget" , 39.99)
    );
    if (!isset($_SESSION["cart"])) 
        $_SESSION["cart"] = array();
    elseif (isset($_GET["action"]) && $_GET["action"]=="addItem")
        addItem();
    elseif (isset($_GET["action"]) && $_GET["action"]=="removeItem")
        removeItem();
    else 
        Display();
        function addItem(){
           global $products;
        }
    
//     function addItem() { echo "addItem";
//         global $products;
//         if (isset($_GET["productId"]) && $_GET["productId"]>=1 && $_GET["productId"]<=3) {
//             $productID = (int) $_GET["productId"];
//             echo $productID;
//             if (!isset($_SESSION["cart"][$productID])) {
//                 $_SESSION["cart"] = $products[$productID];                
//             }
