<?php
class Fruit{
    public $fruit;
    public $color;
    function __construct($name, $color) {
        $this->fruit = $name;
        $this->color = $color;
    }
    protected function GetInfo() {
        echo "Fruit name is ".$this->fruit."color is ".$this->color;
    }
}

class Apple extends Fruit {
    public $price;
    function __construct($name, $color,$price) {
        $this->fruit = $name;
        $this->color = $color;
        $this->price = $price;
    }
    function Name() {
        echo "What is fruit name?</br>";
        $this->GetInfo();
        echo $this->price;
        
    }
    
}

$apple = new Apple("Apple","Red","500 Ks");
$apple->Name();
?>