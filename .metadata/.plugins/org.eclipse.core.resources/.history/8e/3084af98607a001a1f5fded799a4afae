<?php
    abstract class Fruit{
        public $name;
        public $color;
        function __construct($name, $color) {
            $this->name = $name;
            $this->color = $color;
        }
        abstract public  function fruitInfo();
    }
    
    class Apple extends Fruit{
        function fruitInfo() {
            This fruit is;
        }
    }
?>