<?php
    class Cart {
        private $id;
        private $name;
        private $price;
        function __construct($id, $name, $price) {
            $this->id = $id;
            $this->name = $name;
            $this->price = $price;
        }
        function GetID() {
            return $this->id;
        }
        function GetName() {
            return $this->name;
        }
        function GetPrice() {
            return $this->price;
        }
    }
    $products = array(
        1 => new Cart(1, "SuperWidget", 19.99),
        2 => new Cart(2, "MegaWidget", 29.99),
        3 => new Cart(3 , "WonderWidget" , 39.99)
    );

