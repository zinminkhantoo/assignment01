<?php
	class Fruit{
		private $name;
		function __construct($value)
		{
			$this->name = $value;
			echo "I am constructor";
		}
		public function getName()
		{
			echo "Fruit name is: ".$this->name;
		}

		function __destruct() {
		    echo "I am destructor";
		}
	}

	$fruit = new Fruit("Apple");
	getName();
?>